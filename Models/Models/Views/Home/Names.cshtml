@model string[]
@{
    ViewBag.Title = "Names";
}

<h2>Names</h2>

@if(Model.Length == 0)
{
    using (Html.BeginForm())
    {
        for(int i = 0; i < 3; i++)
        {
            <div><label>@(i+1):</label>@Html.TextBox("names")</div>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var s in Model)
    {
        <p>@s</p>
    }
    @Html.ActionLink("Back", "Names");
}